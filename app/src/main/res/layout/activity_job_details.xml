<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp"
    tools:context=".activities.JobDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Title"
        android:layout_margin="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jobCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company"
        android:layout_margin="10dp"
        android:layout_below="@+id/jobTitle"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/jobLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobCompanyName"
        android:text="Location"
        android:layout_margin="10dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/jobSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary"
        android:layout_margin="10dp"
        android:layout_below="@+id/jobLocation"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/jobPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:layout_margin="10dp"
        android:layout_below="@+id/jobSalary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/jobExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience"
        android:layout_margin="10dp"
        android:layout_below="@+id/jobPhone"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/jobJobType"
        android:layout_width="wrap_content"
        android:text="jobType"
        android:layout_margin="10dp"
        android:layout_below="@+id/jobExperience"
        android:layout_height="wrap_content"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/jobVaccencyValue"
        android:layout_width="wrap_content"
        android:layout_below="@+id/jobJobType"
        android:layout_height="wrap_content"
        android:text="Vaccency Value"
        android:layout_margin="10dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/jobQualification"
        android:layout_width="wrap_content"
        android:layout_below="@+id/jobVaccencyValue"
        android:layout_height="wrap_content"
        android:text="Qualification"
        android:layout_margin="10dp"
        android:textSize="16sp" />


        <TextView
            android:id="@+id/addToBookMarkText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue"
            android:text="Add To Bookmark"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_below="@+id/jobQualification"
            />

    </RelativeLayout>

</ScrollView>